                                                        <TextBlock Text="加仓数量:" FontWeight="Bold" FontSize="10" Margin="0,0,0,3"/>
                                                        <TextBox Text="{Binding Quantity, StringFormat=F6}" FontSize="10" Height="24"
                                                                IsReadOnly="True" Background="LightGray"
                                                                ToolTip="使用主下单区的数量设置"/>
                                                    </StackPanel>

                                                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="5,0,0,8">
                                                        <Button Content="下加仓条件单" Command="{Binding PlaceAddPositionConditionalOrderCommand}" 
                                                               Background="Orange" Foreground="White" FontWeight="Bold"
                                                               Width="100" Height="30" FontSize="11" HorizontalAlignment="Center"
                                                               ToolTip="下加仓条件单"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                </StackPanel>
                                </Grid>
                                
                                <!-- 平仓型条件单设置区域 -->
                                <Grid x:Name="ClosePositionPanel" Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="💰 平仓型条件单" FontWeight="Bold" FontSize="13" 
                                                  Foreground="DarkOrange" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                        <TextBlock Text="基于价格或目标浮盈设置止盈条件单，两者可自动互转" FontSize="9" 
                                                  Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                        
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 第一行：持仓信息 -->
                                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,5,8">
                                                <TextBlock Text="关联持仓:" FontWeight="Bold" FontSize="11" Margin="0,0,0,3"/>
                                                <TextBlock Text="{Binding AutoSelectedPosition}" FontSize="10" 
                                                         Background="LightGray" Height="26" Padding="3"
                                                         VerticalAlignment="Center"
                                                         ToolTip="自动关联当前合约的持仓"/>
                                            </StackPanel>

                                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,0,8">
                                                <TextBlock Text="当前浮盈:" FontWeight="Bold" FontSize="11" Margin="0,0,0,3"/>
                                                <TextBlock Text="{Binding CurrentPositionProfit, StringFormat=F2}" FontSize="11" 
                                                         Foreground="{Binding CurrentPositionProfitColor}" Height="26"
                                                         Background="LightGray" Padding="3" VerticalAlignment="Center"
                                                         ToolTip="当前持仓的浮动盈亏"/>
                                            </StackPanel>

                                            <!-- 第二行：价格/浮盈设置 -->
                                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,5,8">
                                                <TextBlock Text="止盈价格:" FontWeight="Bold" FontSize="11" Margin="0,0,0,3"/>
                                                <DockPanel>
                                                    <Button Content="默认" DockPanel.Dock="Right" 
                                                           Command="{Binding FillDefaultClosePriceCommand}"
                                                           Width="38" Height="26" FontSize="9" Margin="2,0,0,0"
                                                           Background="Green" Foreground="White" FontWeight="Bold"
                                                           ToolTip="填入默认止盈价格：多头1.2倍，空头0.8倍"/>
                                                    <TextBox Text="{Binding ClosePriceTarget}" FontSize="11" Height="26"
                                                            ToolTip="期望的止盈价格"/>
                                                </DockPanel>
                                            </StackPanel>

                                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,0,8">
                                                <TextBlock Text="目标浮盈:" FontWeight="Bold" FontSize="11" Margin="0,0,0,3"/>
                                                <DockPanel>
                                                    <Button Content="↔" DockPanel.Dock="Right" 
                                                           Command="{Binding ConvertPriceToTargetProfitCommand}"
                                                           Width="26" Height="26" FontSize="10" Margin="2,0,0,0"
                                                           Background="Purple" Foreground="White" FontWeight="Bold"
                                                           ToolTip="价格转浮盈：根据止盈价格计算目标浮盈"/>
                                                    <TextBox Text="{Binding CloseProfitTarget}" FontSize="11" Height="26"
                                                            ToolTip="期望达到的浮盈金额(USDT)"/>
                                                </DockPanel>
                                            </StackPanel>

                                            <!-- 第三行：自动信息和下单 -->
                                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,5,5">
                                                <TextBlock Text="自动设置:" FontWeight="Bold" FontSize="11" Margin="0,0,0,3"/>
                                                <TextBlock Text="{Binding AutoCloseOrderInfo}" FontSize="10" 
                                                         Foreground="Green" Height="22"
                                                         ToolTip="自动选择的方向和订单类型"/>
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="5,0,0,5">
                                                <Button Content="下平仓条件单" Command="{Binding PlaceClosePositionConditionalOrderCommand}" 
                                                       Background="DarkOrange" Foreground="White" FontWeight="Bold"
                                                       Width="110" Height="32" FontSize="12" HorizontalAlignment="Center"
                                                       ToolTip="下平仓条件单"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
            </materialDesign:Card>

            <!-- 条件单监控区 -->
                <DockPanel>
                            <!-- 加仓型条件单监控标题和操作按钮 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6" DockPanel.Dock="Top">
                                <TextBlock Text="加仓型条件单监控" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="DarkBlue"/>
                                <Button Content="全选" Command="{Binding SelectAllConditionalOrdersCommand}" 
                                       Width="35" Height="20" FontSize="9" Margin="0,0,3,0"/>
                                <Button Content="反选" Command="{Binding InvertConditionalOrderSelectionCommand}" 
                                       Width="35" Height="20" FontSize="9" Margin="0,0,3,0"/>
                                <Button Content="撤销" Command="{Binding CancelSelectedConditionalOrdersCommand}" 
                                       Background="Red" Foreground="White" FontWeight="Bold"
                                       Width="45" Height="20" FontSize="9"
                                       IsEnabled="{Binding HasSelectedConditionalOrders}"
                                       ToolTip="撤销选中的加仓型条件单"/>
                            </StackPanel>
                            
                    <ScrollViewer>
                        <StackPanel>
                            <TextBlock Text="加仓型条件单状态监控" FontSize="12" Foreground="Gray" Margin="0,0,0,6"/>
                            <DataGrid ItemsSource="{Binding ConditionalOrders}"
                                     AutoGenerateColumns="False"
                                     CanUserAddRows="False"
                                     MaxHeight="180"
                                             FontSize="13"
                                             RowHeight="28"
                                             GridLinesVisibility="Horizontal"
                                             HeadersVisibility="Column"
                                             SelectionMode="Single"
                                             AlternatingRowBackground="LightGray"
                                             Background="White">
                                <DataGrid.Columns>
                                            <!-- 选择框列 -->
                                            <DataGridCheckBoxColumn Header="选择" Binding="{Binding IsSelected}" Width="60" MinWidth="55">
                                                <DataGridCheckBoxColumn.ElementStyle>
                                                    <Style TargetType="CheckBox">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridCheckBoxColumn.ElementStyle>
                                            </DataGridCheckBoxColumn>
                                            
                                            <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="80" MinWidth="75">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontFamily" Value="Consolas"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="90" MinWidth="85">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="FontSize" Value="11"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="方向" Binding="{Binding Side}" Width="55" MinWidth="50">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="触发价" Width="85" MinWidth="80">
                                        <DataGridTextColumn.Binding>
                                            <Binding Path="StopPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                        </DataGridTextColumn.Binding>
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter Property="FontFamily" Value="Consolas"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80" MinWidth="75">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="FontSize" Value="11"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <TextBlock Text="暂无条件单" FontSize="12" Foreground="Gray" Margin="0,8,0,0"
                                      Visibility="{Binding HasNoConditionalOrders, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        </StackPanel>
                    </ScrollViewer>
                        </DockPanel>
                </DockPanel>
            </materialDesign:Card>
        </Grid>

        <!-- 状态栏 -->
        <materialDesign:Card Grid.Row="4" Padding="4" Margin="0,5,0,0" Background="LightGray" Height="35">
            <DockPanel>
                <materialDesign:PackIcon Kind="Information" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="11" 
                          TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                          ToolTip="{Binding StatusMessage}"/>
            </DockPanel>
        </materialDesign:Card>
    </Grid>
    </ScrollViewer>
</Window> 