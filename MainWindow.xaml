<Window x:Class="BinanceFuturesTrader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:BinanceFuturesTrader.Converters"
        Title="币安期货交易管理器" 
        Height="900" Width="1400" 
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Window.Resources>
        <!-- 价格格式化转换器 -->
        <converters:PriceFormatConverter x:Key="PriceFormatConverter"/>
        
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,6,6,3"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="3,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="8" MinHeight="650">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*" MinHeight="220"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*" MinHeight="300"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 账户选择和账户信息区合并为单行 -->
            <materialDesign:Card Grid.Row="0" Padding="6" Margin="0,0,0,5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 左侧：账户选择和操作按钮 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="当前账户：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="AccountComboBox" 
                                 ItemsSource="{Binding Accounts}"
                                 SelectedItem="{Binding SelectedAccount}"
                                 DisplayMemberPath="Name"
                                 Width="140" Height="28"/>
                        <Button Content="修改账户" Command="{Binding EditCurrentAccountCommand}" Margin="6,0,0,0"
                               Width="65" Height="28" FontSize="11"
                               ToolTip="修改当前选择账户的API密钥等配置"/>
                        <Button Content="账户配置" Command="{Binding ConfigureAccountCommand}" Margin="6,0,0,0"
                               Width="65" Height="28" FontSize="11"/>
                        
                        <!-- 自动刷新控制 -->
                        <Button Command="{Binding ToggleAutoRefreshCommand}" Margin="6,0,0,0"
                               Width="90" Height="28" FontSize="11">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="Content" Value="暂停刷新"/>
                                    <Setter Property="Background" Value="Orange"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="ToolTip" Value="暂停自动刷新以保持选择状态"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AutoRefreshEnabled}" Value="False">
                                            <Setter Property="Content" Value="恢复刷新"/>
                                            <Setter Property="Background" Value="Green"/>
                                            <Setter Property="ToolTip" Value="恢复自动刷新"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!-- 移动止损控制 -->
                        <Button Command="{Binding ToggleTrailingStopCommand}" Margin="6,0,0,0"
                               Width="90" Height="28" FontSize="11">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="Content" Value="启动移动止损"/>
                                    <Setter Property="Background" Value="Gray"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="ToolTip" Value="启动移动止损，自动调整止损价保持原始止损比例"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TrailingStopEnabled}" Value="True">
                                            <Setter Property="Content" Value="关闭移动止损"/>
                                            <Setter Property="Background" Value="Purple"/>
                                            <Setter Property="ToolTip" Value="关闭移动止损功能"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <!-- 日志操作按钮 -->
                        <Rectangle Fill="LightGray" Width="1" Height="20" Margin="8,0"/>
                        <Button Content="查看日志" Command="{Binding OpenLogFileCommand}" Margin="6,0,0,0"
                               Background="LightBlue" Foreground="Black" Width="55" Height="28" FontSize="11"
                               ToolTip="打开详细的操作日志文件"/>
                        <Button Content="清空日志" Command="{Binding ClearLogFileCommand}" Margin="6,0,0,0"
                               Background="Orange" Foreground="White" Width="55" Height="28" FontSize="11"
                               ToolTip="清空日志文件"/>
                        
                        <TextBlock Text="加载中..." 
                                  Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                  VerticalAlignment="Center" Margin="10,0,0,0" FontSize="11" Foreground="Gray"/>
                    </StackPanel>
                    
                    <!-- 右侧：账户信息框 -->
                    <Border Grid.Column="1" Background="AliceBlue" BorderBrush="LightSteelBlue" BorderThickness="1" 
                           CornerRadius="4" Padding="8,4" Margin="15,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                        <UniformGrid Rows="1" Columns="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="账户权益:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalWalletBalance, StringFormat=F2}" FontWeight="Bold" Foreground="Blue" FontSize="11" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBlock Text="U" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="已用保证金:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalMarginBalance, StringFormat=F2}" FontWeight="Bold" Foreground="Green" FontSize="11" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBlock Text="U" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="浮盈:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalUnrealizedProfit, StringFormat=F2}" FontWeight="Bold" FontSize="11" VerticalAlignment="Center" Margin="2,0"
                                          Foreground="{Binding UnrealizedProfitColor}"/>
                                <TextBlock Text="U" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="可用:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding AvailableBalance, StringFormat=F2}" FontWeight="Bold" Foreground="Orange" FontSize="11" VerticalAlignment="Center" Margin="2,0"/>
                                <TextBlock Text="U" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="价格:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock FontWeight="Bold" Foreground="Red" FontSize="11" VerticalAlignment="Center" Margin="2,0">
                                    <TextBlock.Text>
                                        <Binding Path="LatestPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </UniformGrid>
                            
                            <!-- 权益分析按钮 -->
                            <Button Content="📊" Command="{Binding CheckAccountEquityCompositionCommand}" 
                                   Width="24" Height="24" FontSize="10" Margin="8,0,0,0"
                                   ToolTip="检查账户权益组成详情" Background="LightBlue" BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- 持仓和订单区 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <!-- 持仓区 -->
                <materialDesign:Card Grid.Column="0" Padding="6" Margin="0,0,3,0">
                    <DockPanel>
                        <!-- 持仓标题和操作按钮 -->
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="持仓列表" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Button Content="全选" Command="{Binding SelectAllPositionsCommand}" 
                                   Width="45" Height="26" FontSize="11" Margin="0,0,5,0"/>
                            <Button Content="反选" Command="{Binding InvertPositionSelectionCommand}" 
                                   Width="45" Height="26" FontSize="11" Margin="0,0,5,0"/>
                            <Button Content="平仓" Command="{Binding CloseSelectedPositionsCommand}" 
                                   Background="Red" Foreground="White" FontWeight="Bold"
                                   Width="65" Height="26" FontSize="11"
                                   IsEnabled="{Binding HasSelectedPositions}"
                                   ToolTip="平掉选中的持仓"/>
                            <Button Content="批量保本止损" Command="{Binding AddBreakEvenStopLossForSelectedPositionsCommand}" 
                                   Background="Orange" Foreground="White" FontWeight="Bold"
                                   Width="85" Height="26" FontSize="11"
                                   IsEnabled="{Binding HasSelectedPositions}"
                                   ToolTip="为选中的持仓添加保本止损"/>
                        </StackPanel>
                        
                        <DataGrid ItemsSource="{Binding Positions}"
                                 SelectedItem="{Binding SelectedPosition}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 GridLinesVisibility="Horizontal"
                                 AlternationCount="2"
                                 FontSize="13"
                                 RowHeight="34"
                                 HeadersVisibility="Column"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 MinHeight="150"
                                 MaxHeight="400">
                            <DataGrid.Columns>
                                <!-- 选择框列 -->
                                <DataGridCheckBoxColumn Header="选择" Binding="{Binding IsSelected}" Width="45" MinWidth="45">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                </DataGridCheckBoxColumn>
                                
                                <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="110" MinWidth="105">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="方向" Width="50" MinWidth="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Direction, Mode=OneWay}" 
                                                      Foreground="{Binding DirectionColor, Mode=OneWay}" 
                                                      FontWeight="Bold"
                                                      FontSize="13"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="数量" Binding="{Binding PositionAmt, StringFormat=F4}" 
                                                   Width="120" MinWidth="115">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="开仓价" Width="125" MinWidth="120">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="EntryPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="标记价" Width="125" MinWidth="120">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="MarkPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="货值" Width="110" MinWidth="105">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="PositionValue" StringFormat="F2" Mode="OneWay"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="保证金" Width="105" MinWidth="100">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="RequiredMargin" StringFormat="F2" Mode="OneWay"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="浮盈" Width="130" MinWidth="125">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding UnrealizedProfit, StringFormat=F2, Mode=OneWay}" 
                                                      Foreground="{Binding ProfitColor, Mode=OneWay}" 
                                                      FontWeight="Bold"
                                                      FontFamily="Consolas"
                                                      FontSize="12"
                                                      HorizontalAlignment="Right"
                                                      VerticalAlignment="Center"
                                                      Margin="0,0,5,0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="杠杆" Binding="{Binding Leverage}" 
                                                   Width="50" MinWidth="45">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="模式" Binding="{Binding MarginType}" 
                                                   Width="60" MinWidth="55">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </materialDesign:Card>

                <!-- 委托订单区 -->
                <materialDesign:Card Grid.Column="1" Padding="6" Margin="3,0,0,0">
                    <DockPanel>
                        <!-- 委托标题和操作按钮 -->
                        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="委托订单" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Button Content="全选" Command="{Binding SelectAllOrdersCommand}" 
                                   Width="45" Height="26" FontSize="11" Margin="0,0,5,0"/>
                            <Button Content="反选" Command="{Binding InvertOrderSelectionCommand}" 
                                   Width="45" Height="26" FontSize="11" Margin="0,0,5,0"/>
                            <Button Content="撤销" Command="{Binding CancelSelectedOrdersCommand}" 
                                   Background="Red" Foreground="White" FontWeight="Bold"
                                   Width="65" Height="26" FontSize="11"
                                   IsEnabled="{Binding HasSelectedOrders}"
                                   ToolTip="撤销选中的委托单"/>
                        </StackPanel>
                        
                        <DataGrid ItemsSource="{Binding FilteredOrders}"
                                 SelectedItem="{Binding SelectedOrder}"
                                 AutoGenerateColumns="False"
                                 CanUserAddRows="False"
                                 GridLinesVisibility="Horizontal"
                                 AlternationCount="2"
                                 FontSize="13"
                                 RowHeight="32"
                                 HeadersVisibility="Column"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 MinHeight="150"
                                 MaxHeight="400">
                            <DataGrid.Columns>
                                <!-- 选择框列 -->
                                <DataGridCheckBoxColumn Header="选择" Binding="{Binding IsSelected}" Width="55" MinWidth="50">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                </DataGridCheckBoxColumn>
                                
                                <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="95" MinWidth="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="110" MinWidth="105">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="数量" Binding="{Binding OrigQty, StringFormat=F4}" 
                                                   Width="140" MinWidth="135">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="触发价" Width="150" MinWidth="145">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="StopPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                    </DataGridTextColumn.Binding>
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80" MinWidth="75">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <!-- 创建时间列 -->
                                <DataGridTextColumn Header="创建时间" Binding="{Binding Time, StringFormat=MM-dd HH:mm:ss}" 
                                                   Width="120" MinWidth="115">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="10"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </materialDesign:Card>
            </Grid>

            <!-- 操作按钮区 -->
            <materialDesign:Card Grid.Row="2" Padding="6" Margin="0,5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- 第一组：持仓相关操作 -->
                    <Button Content="一键清仓" Command="{Binding ClearAllPositionsAndOrdersCommand}" 
                           Background="DarkRed" Foreground="White" FontWeight="Bold"
                           Width="80" Height="28" FontSize="12"
                           ToolTip="清空所有持仓和委托单（市价平仓）"/>
                    <Button Content="平仓" Command="{Binding ClosePositionCommand}"
                           Width="60" Height="28" FontSize="12"
                           ToolTip="平掉选中的持仓"/>
                    <Button Content="增加保本止损" Command="{Binding AddBreakEvenStopLossCommand}"
                           Background="Orange" Foreground="White" FontWeight="Bold"
                           Width="95" Height="28" FontSize="12"
                           ToolTip="为选中持仓添加保本止损单（触发价=开仓价）"/>
                    <Button Content="保盈止损" Command="{Binding AddProfitProtectionStopLossCommand}"
                           Background="DarkOrange" Foreground="White" FontWeight="Bold"
                           Width="80" Height="28" FontSize="12"
                           ToolTip="为选中持仓添加保盈止损单（保护指定盈利）"/>
                    
                    <!-- 分隔符1 -->
                    <TextBlock Text=" | " VerticalAlignment="Center" FontSize="14" FontWeight="Bold" 
                              Foreground="Gray" Margin="5,0"/>
                    
                    <!-- 第二组：委托单相关操作 -->
                    <Button Content="清理委托单" Command="{Binding CancelAllOrdersCommand}"
                           Width="80" Height="28" FontSize="12"
                           ToolTip="取消所有未成交的委托订单"/>
                    <Button Content="清除选定委托" Command="{Binding CancelSelectedOrdersCommand}"
                           Background="Red" Foreground="White" FontWeight="Bold"
                           Width="95" Height="28" FontSize="12"
                           IsEnabled="{Binding HasSelectedOrders}"
                           ToolTip="取消选中的委托订单"/>
                    
                    <!-- 分隔符2 -->
                    <TextBlock Text=" | " VerticalAlignment="Center" FontSize="14" FontWeight="Bold" 
                              Foreground="Gray" Margin="5,0"/>
                    
                    <!-- 第三组：查询操作 -->
                    <Button Content="查询订单历史" Command="{Binding CheckOrderHistoryCommand}"
                           Background="Blue" Foreground="White" FontWeight="Bold"
                           Width="100" Height="28" FontSize="12"
                           ToolTip="查询最近50条订单历史，寻找已执行或已取消的止损单"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- 下单区 -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- 下单输入区 -->
                <materialDesign:Card Grid.Column="0" Padding="6" Margin="0,0,3,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="350">
                        <DockPanel MinHeight="300">
                            <TextBlock Text="下单区" FontWeight="Bold" FontSize="15" DockPanel.Dock="Top" Margin="0,0,0,6"/>
                            
                            <!-- 杠杆快捷设置 -->
                            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,6">
                                <TextBlock Text="杠杆设置：" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"/>
                                <Button Content="1x" Command="{Binding SetLeverageCommand}" CommandParameter="1" 
                                       Width="32" Height="24" Padding="0" FontSize="11">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Leverage}" Value="1">
                                                    <Setter Property="Background" Value="Orange"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="3x" Command="{Binding SetLeverageCommand}" CommandParameter="3"
                                       Width="32" Height="24" Padding="0" FontSize="11" Margin="2,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Leverage}" Value="3">
                                                    <Setter Property="Background" Value="Orange"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="5x" Command="{Binding SetLeverageCommand}" CommandParameter="5"
                                       Width="32" Height="24" Padding="0" FontSize="11" Margin="2,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Leverage}" Value="5">
                                                    <Setter Property="Background" Value="Orange"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="10x" Command="{Binding SetLeverageCommand}" CommandParameter="10"
                                       Width="35" Height="24" Padding="0" FontSize="11" Margin="2,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Leverage}" Value="10">
                                                    <Setter Property="Background" Value="Orange"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="20x" Command="{Binding SetLeverageCommand}" CommandParameter="20"
                                       Width="35" Height="24" Padding="0" FontSize="11" Margin="2,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Leverage}" Value="20">
                                                    <Setter Property="Background" Value="Orange"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <TextBlock Text="{Binding Leverage, StringFormat=当前: {0}x}" FontWeight="Bold" 
                                          Foreground="Blue" VerticalAlignment="Center" Margin="8,0,0,0" FontSize="12"/>
                            </StackPanel>
                            
                            <!-- 基础下单信息 -->
                            <Grid DockPanel.Dock="Top" Margin="0,0,0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 第一行 -->
                                <DockPanel Grid.Row="0" Grid.Column="0" Margin="0,0,4,5">
                                    <TextBlock Text="合约名:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="50"/>
                                    <Button Content="查询" Command="{Binding QueryContractInfoCommand}"
                                           DockPanel.Dock="Right" Width="30" Height="28" Padding="0" Margin="2,0,0,0" FontSize="9"
                                           Background="Blue" Foreground="White" FontWeight="Bold"
                                           ToolTip="查询合约信息：价格、交易规则、持仓、订单等"/>
                                    <TextBox Text="{Binding Symbol}" Height="28" FontSize="11" Padding="8,6" Margin="2,0"
                                            materialDesign:HintAssist.Hint="输入币种如BTC"
                                            ToolTip="输入币种符号，系统会自动添加USDT后缀"/>
                                </DockPanel>
                                
                                <!-- 交易方向 -->
                                <DockPanel Grid.Row="0" Grid.Column="1" Margin="4,0,0,5">
                                    <TextBlock Text="交易方向:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="60"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <RadioButton Content="买入" IsChecked="{Binding IsBuySelected}" 
                                                   FontSize="11" Margin="0,0,12,0"
                                                   GroupName="TradeSide"/>
                                        <RadioButton Content="卖出" IsChecked="{Binding IsSellSelected}" 
                                                   FontSize="11"
                                                   GroupName="TradeSide"/>
                                    </StackPanel>
                                </DockPanel>

                                <!-- 第二行 -->
                                <DockPanel Grid.Row="1" Grid.Column="0" Margin="0,0,4,5">
                                    <TextBlock Text="订单类型:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="60"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <RadioButton Content="市价" IsChecked="{Binding IsMarketOrderSelected}" 
                                                   FontSize="11" Margin="0,0,12,0"
                                                   GroupName="OrderType"/>
                                        <RadioButton Content="限价" IsChecked="{Binding IsLimitOrderSelected}" 
                                                   FontSize="11"
                                                   GroupName="OrderType"/>
                                    </StackPanel>
                                </DockPanel>

                                <DockPanel Grid.Row="1" Grid.Column="1" Margin="4,0,0,5">
                                    <TextBlock Text="保证金模式:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="75"/>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <RadioButton Content="逐仓" IsChecked="{Binding IsIsolatedMarginSelected}" 
                                                   FontSize="11" Margin="0,0,12,0"
                                                   GroupName="MarginType"/>
                                        <RadioButton Content="全仓" IsChecked="{Binding IsCrossedMarginSelected}" 
                                                   FontSize="11"
                                                   GroupName="MarginType"/>
                                    </StackPanel>
                                </DockPanel>

                                <!-- 第三行：数量和价格 -->
                                <DockPanel Grid.Row="2" Grid.Column="0" Margin="0,0,4,5">
                                    <TextBlock Text="交易数量:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="60"/>
                                    <TextBox Text="{Binding Quantity}" Height="28" FontSize="11" Padding="8,6"/>
                                </DockPanel>

                                <DockPanel Grid.Row="2" Grid.Column="1" Margin="4,0,0,5">
                                    <TextBlock Text="价格:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="40"/>
                                    <TextBox Text="{Binding Price}" Height="28" FontSize="11" Padding="8,6"
                                            IsEnabled="{Binding IsLimitOrder}"
                                            ToolTip="仅限价单需要"/>
                                </DockPanel>
                            </Grid>
                            
                            <!-- 止损设置区 -->
                            <Grid DockPanel.Dock="Top" Margin="0,0,0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- 止损比例 -->
                                <DockPanel Grid.Row="0" Grid.Column="0" Margin="0,0,4,4">
                                    <TextBlock Text="止损比例:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="60"/>
                                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="3,0,0,0">
                                        <Button Content="3%" Command="{Binding SetStopLossRatioCommand}" CommandParameter="3"
                                               Width="22" Height="20" Padding="0" FontSize="8" Margin="1,0,0,0"
                                               Background="LightCoral" Foreground="White" FontWeight="Bold"
                                               ToolTip="快速设置3%止损"/>
                                        <Button Content="5%" Command="{Binding SetStopLossRatioCommand}" CommandParameter="5"
                                               Width="22" Height="20" Padding="0" FontSize="8" Margin="1,0,0,0"
                                               Background="Orange" Foreground="White" FontWeight="Bold"
                                               ToolTip="快速设置5%止损"/>
                                        <Button Content="10%" Command="{Binding SetStopLossRatioCommand}" CommandParameter="10"
                                               Width="25" Height="20" Padding="0" FontSize="8" Margin="1,0,0,0"
                                               Background="Gold" Foreground="Black" FontWeight="Bold"
                                               ToolTip="快速设置10%止损"/>
                                        <Button Content="20%" Command="{Binding SetStopLossRatioCommand}" CommandParameter="20"
                                               Width="25" Height="20" Padding="0" FontSize="8" Margin="1,0,0,0"
                                               Background="LightBlue" Foreground="Black" FontWeight="Bold"
                                               ToolTip="快速设置20%止损"/>
                                    </StackPanel>
                                    <TextBox Text="{Binding StopLossRatio}" Height="24" FontSize="11" Padding="8,6"
                                            ToolTip="止损比例，例如输入5表示5%"/>
                                </DockPanel>

                                <!-- 止损价格 -->
                                <DockPanel Grid.Row="0" Grid.Column="1" Margin="4,0,0,4">
                                    <TextBlock Text="止损价格:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="60"/>
                                    <Button Content="计算" Command="{Binding CalculateStopLossPriceCommand}" 
                                           DockPanel.Dock="Right" Width="30" Height="24" Padding="0" FontSize="8" Margin="2,0,0,0"
                                           Background="LightBlue" Foreground="Black" FontWeight="Bold"
                                           ToolTip="根据止损比例计算止损价格"/>
                                    <TextBox Text="{Binding StopLossPrice}" Height="24" FontSize="11" Padding="8,6"
                                            ToolTip="止损触发价格"/>
                                </DockPanel>

                                <!-- 止损金额和风险金 -->
                                <DockPanel Grid.Row="1" Grid.Column="0" Margin="0,0,4,4">
                                    <TextBlock Text="止损金额:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="60"/>
                                    <Button Content="以损定量" Command="{Binding CalculateQuantityFromLossCommand}" 
                                           DockPanel.Dock="Right" Width="50" Height="26" Padding="0" FontSize="9" Margin="2,0,0,0"
                                           Background="LightGreen" Foreground="Black" FontWeight="Bold"
                                           ToolTip="根据止损金额计算交易数量"/>
                                    <TextBox Text="{Binding StopLossAmount}" Height="26" FontSize="11" Padding="8,6"
                                            IsReadOnly="True" Background="LightGray" ToolTip="预计止损金额（自动计算）"/>
                                </DockPanel>

                                <DockPanel Grid.Row="1" Grid.Column="1" Margin="4,0,0,4">
                                    <TextBlock Text="可用风险金:" FontWeight="Bold" FontSize="11" DockPanel.Dock="Left" 
                                              VerticalAlignment="Center" Width="75"/>
                                    <Button Content="计算" Command="{Binding CalculateMaxRiskCapitalCommand}" 
                                           DockPanel.Dock="Right" Width="30" Height="26" Padding="0" FontSize="9" Margin="2,0,0,0"
                                           Background="Purple" Foreground="White" FontWeight="Bold"
                                           ToolTip="计算可用于交易的风险资金"/>
                                    <TextBox IsReadOnly="True" Height="26" FontSize="11" Padding="8,6" Background="LightGray"
                                            ToolTip="可用于交易的风险资金"/>
                                </DockPanel>

                                <!-- 下单按钮 -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" 
                                           HorizontalAlignment="Center" Margin="0,8,0,0">
                                    <Button Content="下单" Command="{Binding PlaceOrderCommand}" 
                                           Background="Green" Foreground="White" FontWeight="Bold"
                                           Width="65" Height="30" FontSize="12" Margin="0,0,8,0"
                                           ToolTip="执行下单操作"/>
                                    <Button Content="条件单" Click="ToggleConditionalOrder_Click"
                                           Background="Blue" Foreground="White" FontWeight="Bold"
                                           Width="55" Height="30" FontSize="11"
                                           ToolTip="显示/隐藏条件单设置"/>
                                </StackPanel>
                            </Grid>
                        </DockPanel>
                    </ScrollViewer>
                </materialDesign:Card>

                <!-- 最近合约区 -->
                <materialDesign:Card Grid.Column="1" Padding="6" Margin="3,0">
                    <DockPanel>
                        <TextBlock Text="最近合约" FontWeight="Bold" FontSize="13" DockPanel.Dock="Top" Margin="0,0,0,6"/>
                        <ScrollViewer MaxHeight="220">
                            <ItemsControl ItemsSource="{Binding RecentContracts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" 
                                               Command="{Binding DataContext.SelectRecentContractCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"
                                               Style="{StaticResource MaterialDesignOutlinedButton}"
                                               Height="26" Margin="1" FontSize="11" Padding="6,2"
                                               ToolTip="点击切换到此合约"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </materialDesign:Card>

                <!-- 条件单设置和监控区 -->
                <materialDesign:Card Grid.Column="2" Padding="6" Margin="3,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="350">
                        <DockPanel MinHeight="300">
                            <!-- 条件单设置区域 -->
                            <materialDesign:Card x:Name="ConditionalOrderCard" DockPanel.Dock="Top" Padding="6" Margin="0,0,0,8" 
                                                Background="LightBlue" 
                                                Visibility="Collapsed">
                                <StackPanel>
                                    <TextBlock Text="🔔 条件单设置" FontWeight="Bold" FontSize="13" Margin="0,0,0,6"/>
                                    
                                    <!-- 条件单类型选择 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <TextBlock Text="类型:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="11"/>
                                        <RadioButton Content="标准" IsChecked="{Binding IsStandardConditionalSelected}" 
                                                   FontSize="10" Margin="0,0,10,0"
                                                   GroupName="ConditionalOrderType"
                                                   ToolTip="基于价格突破的条件单"/>
                                        <RadioButton Content="浮盈" IsChecked="{Binding IsProfitConditionalSelected}" 
                                                   FontSize="10" Margin="0,0,10,0"
                                                   GroupName="ConditionalOrderType"
                                                   ToolTip="基于持仓浮盈的条件单"/>
                                    </StackPanel>
                                    
                                    <!-- 标准条件单设置 -->
                                    <StackPanel x:Name="StandardConditionalGrid" Visibility="{Binding StandardConditionalVisibility}">
                                        <!-- 标准条件单控件 -->
                                        <Grid Margin="0,0,0,4">
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                            <!-- 第一行：条件类型和触发价格 -->
                                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,3,4">
                                                <TextBlock Text="条件类型:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <ComboBox SelectedValue="{Binding ConditionalOrderType}" FontSize="10" Height="22">
                                                    <ComboBoxItem Content="STOP_MARKET" Tag="STOP_MARKET" ToolTip="止损市价单"/>
                                                    <ComboBoxItem Content="TAKE_PROFIT_MARKET" Tag="TAKE_PROFIT_MARKET" ToolTip="止盈市价单"/>
                                                </ComboBox>
                                        </StackPanel>

                                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="3,0,0,4">
                                                <TextBlock Text="触发价格:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <DockPanel>
                                                    <Button Content="填充" Command="{Binding FillConditionalOrderParamsCommand}" 
                                                           DockPanel.Dock="Right" Width="30" Height="22" FontSize="9" Margin="2,0,0,0"
                                                           Background="Green" Foreground="White" FontWeight="Bold"
                                                           ToolTip="根据当前价格自动填充触发价格"/>
                                                    <TextBox Text="{Binding ConditionalTriggerPrice}" FontSize="10" Height="22"
                                                            ToolTip="条件单触发价格"/>
                                                </DockPanel>
                                        </StackPanel>

                                            <!-- 第二行：触发方式 -->
                                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,4">
                                                <TextBlock Text="触发方式:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <StackPanel Orientation="Horizontal">
                                                    <RadioButton Content="合约价" IsChecked="{Binding IsConditionalContractPriceSelected}" 
                                                              FontSize="9" Margin="0,0,15,0"
                                             GroupName="WorkingType"/>
                                                    <RadioButton Content="标记价" IsChecked="{Binding IsConditionalMarkPriceSelected}" 
                                                              FontSize="9"
                                             GroupName="WorkingType"/>
                                                </StackPanel>
                                        </StackPanel>

                                            <!-- 第三行：操作按钮 -->
                                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,4">
                                                <Button Content="下标准条件单" Command="{Binding PlaceConditionalOrderCommand}" 
                                                       Background="Orange" Foreground="White" FontWeight="Bold"
                                                       Height="24" FontSize="10"
                                                       ToolTip="下标准条件单"/>
                                            </StackPanel>
                                        </Grid>
                                        </StackPanel>

                                    <!-- 浮盈条件单设置 -->
                                    <StackPanel x:Name="ProfitConditionalGrid" Visibility="{Binding ProfitConditionalVisibility}">
                                        <!-- 浮盈条件单控件 -->
                                        <Grid Margin="0,0,0,4">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 第一行：选择持仓和目标浮盈 -->
                                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,3,4">
                                                <TextBlock Text="选择持仓:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <ComboBox ItemsSource="{Binding Positions}" 
                                                        SelectedItem="{Binding SelectedPositionForConditional}" 
                                                        DisplayMemberPath="Symbol" FontSize="10" Height="22"
                                                        ToolTip="选择要设置浮盈条件单的持仓"/>
                                            </StackPanel>

                                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="3,0,0,4">
                                                <TextBlock Text="目标浮盈:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <TextBox Text="{Binding TargetProfit}" FontSize="10" Height="22"
                                                        ToolTip="目标浮盈金额(USDT)"/>
                                    </StackPanel>

                                            <!-- 第二行：订单模式和订单类型 -->
                                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,3,4">
                                                <TextBlock Text="订单模式:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <ComboBox SelectedValue="{Binding ProfitConditionalOrderMode}" FontSize="9" Height="22" SelectedValuePath="Tag">
                                                    <ComboBoxItem Content="平仓型" Tag="平仓型" ToolTip="用于止盈平仓，方向与持仓相反"/>
                                                    <ComboBoxItem Content="加仓型" Tag="加仓型" ToolTip="用于突破加仓，方向与持仓相同"/>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="3,0,0,4">
                                                <TextBlock Text="订单类型:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <ComboBox SelectedValue="{Binding ProfitConditionalType}" FontSize="9" Height="22" SelectedValuePath="Tag">
                                                    <ComboBoxItem Content="STOP_MARKET" Tag="STOP_MARKET" ToolTip="止损市价单"/>
                                                    <ComboBoxItem Content="TAKE_PROFIT_MARKET" Tag="TAKE_PROFIT_MARKET" ToolTip="止盈市价单"/>
                                                </ComboBox>
                                            </StackPanel>

                                            <!-- 第三行：计算价格和当前浮盈 -->
                                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,3,4">
                                                <TextBlock Text="计算价格:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <TextBox Text="{Binding CalculatedPrice, StringFormat=F4, Mode=OneWay}" FontSize="10" Height="22"
                                                        IsReadOnly="True" Background="LightYellow"
                                                        ToolTip="计算出的触发价格"/>
                                            </StackPanel>

                                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="3,0,0,4">
                                                <TextBlock Text="当前浮盈:" FontWeight="Bold" FontSize="10" Margin="0,0,0,2"/>
                                                <TextBox Text="{Binding CurrentProfit, StringFormat=F2, Mode=OneWay}" FontSize="10" Height="22"
                                                         IsReadOnly="True" Background="LightGray"
                                                         Foreground="{Binding CurrentProfitColor}"
                                                         ToolTip="选中持仓的当前浮盈"/>
                                            </StackPanel>

                                            <!-- 第四行：操作按钮 -->
                                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,4">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button Content="计算" Command="{Binding CalculateProfitPriceCommand}" 
                                                           Width="45" Height="22" FontSize="9" Margin="0,0,5,0"
                                                 Background="Purple" Foreground="White" FontWeight="Bold"
                                                           ToolTip="计算触发价格"/>
                                                    <Button Content="下单" Command="{Binding PlaceProfitConditionalOrderCommand}" 
                                                           Background="DarkOrange" Foreground="White" FontWeight="Bold"
                                                           Width="50" Height="22" FontSize="9"
                                                           ToolTip="下浮盈条件单"/>
                                        </StackPanel>
                                                
                                                <!-- 智能提示 -->
                                                <Border Background="LightYellow" BorderBrush="Orange" BorderThickness="1" CornerRadius="3" 
                                                       Padding="4" Margin="0,4,0,0">
                                                    <TextBlock FontSize="8" Foreground="DarkOrange" TextWrapping="Wrap" HorizontalAlignment="Center">
                                                        <Run Text="💡 订单类型已智能选择："/>
                                                        <Run Text="平仓型=止盈；做多加仓=突破向上；做空加仓=突破向下"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </materialDesign:Card>

                        <!-- 条件单监控区 -->
                        <StackPanel>
                            <!-- 条件单监控标题和操作按钮 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="条件单监控" FontWeight="Bold" FontSize="13" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <Button Content="全选" Command="{Binding SelectAllConditionalOrdersCommand}" 
                                       Width="35" Height="20" FontSize="9" Margin="0,0,3,0"/>
                                <Button Content="反选" Command="{Binding InvertConditionalOrderSelectionCommand}" 
                                       Width="35" Height="20" FontSize="9" Margin="0,0,3,0"/>
                                <Button Content="撤销" Command="{Binding CancelSelectedConditionalOrdersCommand}" 
                                       Background="Red" Foreground="White" FontWeight="Bold"
                                       Width="45" Height="20" FontSize="9"
                                       IsEnabled="{Binding HasSelectedConditionalOrders}"
                                       ToolTip="撤销选中的条件单"/>
                                <Button Content="清理全部" Command="{Binding CancelAllConditionalOrdersCommand}" 
                                       Background="DarkRed" Foreground="White" FontWeight="Bold"
                                       Width="55" Height="20" FontSize="9" Margin="3,0,0,0"
                                       ToolTip="清理所有条件单"/>
                            </StackPanel>
                            
                        <ScrollViewer>
                            <StackPanel>
                                    <TextBlock Text="条件单状态监控" FontSize="10" Foreground="Gray" Margin="0,0,0,4"/>
                                <DataGrid ItemsSource="{Binding ConditionalOrders}"
                                         AutoGenerateColumns="False"
                                         CanUserAddRows="False"
                                         MaxHeight="180"
                                         FontSize="13"
                                         RowHeight="30"
                                         GridLinesVisibility="Horizontal"
                                         HeadersVisibility="Column"
                                         SelectionMode="Single"
                                         AlternatingRowBackground="LightGray"
                                         Background="White"
                                         HorizontalScrollBarVisibility="Auto">
                                    <DataGrid.Columns>
                                            <!-- 选择框列 -->
                                            <DataGridCheckBoxColumn Header="选择" Binding="{Binding IsSelected}" Width="55" MinWidth="50">
                                                <DataGridCheckBoxColumn.ElementStyle>
                                                    <Style TargetType="CheckBox">
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridCheckBoxColumn.ElementStyle>
                                            </DataGridCheckBoxColumn>
                                            
                                            <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="95" MinWidth="90">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontFamily" Value="Consolas"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="110" MinWidth="105">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="FontSize" Value="10"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Header="方向" Binding="{Binding Side}" Width="60" MinWidth="55">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                        <DataGridTextColumn Header="触发价" Width="110" MinWidth="105">
                                            <DataGridTextColumn.Binding>
                                                <Binding Path="StopPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                            </DataGridTextColumn.Binding>
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter Property="FontFamily" Value="Consolas"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                            <DataGridTextColumn Header="数量" Width="90" MinWidth="85">
                                                <DataGridTextColumn.Binding>
                                                    <Binding Path="OrigQty" StringFormat="F4"/>
                                                </DataGridTextColumn.Binding>
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter Property="FontFamily" Value="Consolas"/>
                                                        <Setter Property="FontSize" Value="12"/>
                                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                    <TextBlock Text="暂无条件单" FontSize="10" Foreground="Gray" Margin="0,6,0,0"
                                          Visibility="{Binding HasNoConditionalOrders, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </ScrollViewer>
                        </StackPanel>
                    </DockPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>

        <!-- 状态栏 -->
        <materialDesign:Card Grid.Row="4" Padding="4" Margin="0,5,0,0" Background="LightGray">
            <DockPanel>
                <materialDesign:PackIcon Kind="Information" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center" FontSize="11"/>
            </DockPanel>
        </materialDesign:Card>
    </Grid>
</ScrollViewer>
</Window> 