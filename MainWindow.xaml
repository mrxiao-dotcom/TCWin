<Window x:Class="BinanceFuturesTrader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:BinanceFuturesTrader.Converters"
        Title="币安期货交易管理器" 
        Height="900" Width="1400" 
        MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    
    <Window.Resources>
        <!-- 价格格式化转换器 -->
        <converters:PriceFormatConverter x:Key="PriceFormatConverter"/>
        
        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,6,6,3"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="3,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="8" MinHeight="650">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*" MinHeight="220"/>
            <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*" MinHeight="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 账户选择和账户信息区合并为单行 -->
        <materialDesign:Card Grid.Row="0" Padding="6" Margin="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：账户选择和操作按钮 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="当前账户：" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="AccountComboBox" 
                             ItemsSource="{Binding Accounts}"
                             SelectedItem="{Binding SelectedAccount}"
                             DisplayMemberPath="Name"
                             Width="140" Height="28"/>
                    <Button Content="修改账户" Command="{Binding EditCurrentAccountCommand}" Margin="6,0,0,0"
                           Width="65" Height="28" FontSize="11"
                           ToolTip="修改当前选择账户的API密钥等配置"/>
                    <Button Content="账户配置" Command="{Binding ConfigureAccountCommand}" Margin="6,0,0,0"
                           Width="65" Height="28" FontSize="11"/>
                    
                    <!-- 自动刷新控制 -->
                    <Button Command="{Binding ToggleAutoRefreshCommand}" Margin="6,0,0,0"
                           Width="90" Height="28" FontSize="11">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Content" Value="暂停刷新"/>
                                <Setter Property="Background" Value="Orange"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="ToolTip" Value="暂停自动刷新以保持选择状态"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AutoRefreshEnabled}" Value="False">
                                        <Setter Property="Content" Value="恢复刷新"/>
                                        <Setter Property="Background" Value="Green"/>
                                        <Setter Property="ToolTip" Value="恢复自动刷新"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                        
                        <!-- 移动止损控制 -->
                        <Button Command="{Binding ToggleTrailingStopCommand}" Margin="6,0,0,0"
                               Width="90" Height="28" FontSize="11">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="Content" Value="启动移动止损"/>
                                    <Setter Property="Background" Value="Gray"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="ToolTip" Value="启动移动止损，自动调整止损价保持原始止损比例"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TrailingStopEnabled}" Value="True">
                                            <Setter Property="Content" Value="关闭移动止损"/>
                                            <Setter Property="Background" Value="Purple"/>
                                            <Setter Property="ToolTip" Value="关闭移动止损功能"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    
                    <!-- 日志操作按钮 -->
                    <Rectangle Fill="LightGray" Width="1" Height="20" Margin="8,0"/>
                    <Button Content="查看日志" Command="{Binding OpenLogFileCommand}" Margin="6,0,0,0"
                           Background="LightBlue" Foreground="Black" Width="55" Height="28" FontSize="11"
                           ToolTip="打开详细的操作日志文件"/>
                    <Button Content="清空日志" Command="{Binding ClearLogFileCommand}" Margin="6,0,0,0"
                           Background="Orange" Foreground="White" Width="55" Height="28" FontSize="11"
                           ToolTip="清空日志文件"/>
                    
                    <TextBlock Text="加载中..." 
                              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                              VerticalAlignment="Center" Margin="10,0,0,0" FontSize="11" Foreground="Gray"/>
                </StackPanel>
                
                <!-- 右侧：账户信息框 -->
                <Border Grid.Column="1" Background="AliceBlue" BorderBrush="LightSteelBlue" BorderThickness="1" 
                       CornerRadius="4" Padding="8,4" Margin="15,0,0,0" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                    <UniformGrid Rows="1" Columns="5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="账户权益:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalWalletBalance, StringFormat=F2}" FontWeight="Bold" Foreground="Blue" FontSize="11" VerticalAlignment="Center" Margin="2,0"/>
                            <TextBlock Text="U" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="已用保证金:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalMarginBalance, StringFormat=F2}" FontWeight="Bold" Foreground="Green" FontSize="11" VerticalAlignment="Center" Margin="2,0"/>
                            <TextBlock Text="U" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="浮盈:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalUnrealizedProfit, StringFormat=F2}" FontWeight="Bold" FontSize="11" VerticalAlignment="Center" Margin="2,0"
                                      Foreground="{Binding UnrealizedProfitColor}"/>
                            <TextBlock Text="U" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="可用:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding AvailableBalance, StringFormat=F2}" FontWeight="Bold" Foreground="Orange" FontSize="11" VerticalAlignment="Center" Margin="2,0"/>
                            <TextBlock Text="U" FontSize="10" Foreground="Gray" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="价格:" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock FontWeight="Bold" Foreground="Red" FontSize="11" VerticalAlignment="Center" Margin="2,0">
                                <TextBlock.Text>
                                    <Binding Path="LatestPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </UniformGrid>
                            
                            <!-- 权益分析按钮 -->
                            <Button Content="📊" Command="{Binding CheckAccountEquityCompositionCommand}" 
                                   Width="24" Height="24" FontSize="10" Margin="8,0,0,0"
                                   ToolTip="检查账户权益组成详情" Background="LightBlue" BorderThickness="0"/>
                        </StackPanel>
                </Border>
            </Grid>
        </materialDesign:Card>

        <!-- 持仓和订单区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <!-- 持仓区 -->
            <materialDesign:Card Grid.Column="0" Padding="6" Margin="0,0,3,0">
                <DockPanel>
                    <!-- 持仓标题和操作按钮 -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="持仓列表" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button Content="全选" Command="{Binding SelectAllPositionsCommand}" 
                               Width="45" Height="26" FontSize="11" Margin="0,0,5,0"/>
                        <Button Content="反选" Command="{Binding InvertPositionSelectionCommand}" 
                               Width="45" Height="26" FontSize="11" Margin="0,0,5,0"/>
                        <Button Content="平仓" Command="{Binding CloseSelectedPositionsCommand}" 
                               Background="Red" Foreground="White" FontWeight="Bold"
                               Width="65" Height="26" FontSize="11"
                               IsEnabled="{Binding HasSelectedPositions}"
                               ToolTip="平掉选中的持仓"/>
                        <Button Content="批量保本止损" Command="{Binding AddBreakEvenStopLossForSelectedPositionsCommand}" 
                               Background="Orange" Foreground="White" FontWeight="Bold"
                               Width="85" Height="26" FontSize="11"
                               IsEnabled="{Binding HasSelectedPositions}"
                               ToolTip="为选中的持仓添加保本止损"/>
                    </StackPanel>
                    
                    <DataGrid ItemsSource="{Binding Positions}"
                             SelectedItem="{Binding SelectedPosition}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             GridLinesVisibility="Horizontal"
                             AlternationCount="2"
                                 FontSize="13"
                                 RowHeight="34"
                                 HeadersVisibility="Column"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 MinHeight="150"
                                 MaxHeight="400">
                        <DataGrid.Columns>
                            <!-- 选择框列 -->
                                <DataGridCheckBoxColumn Header="选择" Binding="{Binding IsSelected}" Width="45" MinWidth="45">
                                <DataGridCheckBoxColumn.ElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridCheckBoxColumn.ElementStyle>
                            </DataGridCheckBoxColumn>
                            
                                <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="110" MinWidth="105">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="方向" Width="50" MinWidth="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Direction, Mode=OneWay}" 
                                                  Foreground="{Binding DirectionColor, Mode=OneWay}" 
                                                  FontWeight="Bold"
                                                      FontSize="13"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="数量" Binding="{Binding PositionAmt, StringFormat=F4}" 
                                                   Width="120" MinWidth="115">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                <DataGridTextColumn Header="开仓价" Width="125" MinWidth="120">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="EntryPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                <DataGridTextColumn Header="标记价" Width="125" MinWidth="120">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="MarkPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                <DataGridTextColumn Header="货值" Width="110" MinWidth="105">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="PositionValue" StringFormat="F2" Mode="OneWay"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                <DataGridTextColumn Header="保证金" Width="105" MinWidth="100">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="RequiredMargin" StringFormat="F2" Mode="OneWay"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                <DataGridTemplateColumn Header="浮盈" Width="130" MinWidth="125">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                            <TextBlock Text="{Binding UnrealizedProfit, StringFormat=F2, Mode=OneWay}" 
                                                  Foreground="{Binding ProfitColor, Mode=OneWay}" 
                                                  FontWeight="Bold"
                                                      FontFamily="Consolas"
                                                      FontSize="12"
                                                  HorizontalAlignment="Right"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,5,0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="杠杆" Binding="{Binding Leverage}" 
                                                   Width="50" MinWidth="45">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="模式" Binding="{Binding MarginType}" 
                                                   Width="60" MinWidth="55">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </materialDesign:Card>

            <!-- 委托订单区 -->
            <materialDesign:Card Grid.Column="1" Padding="6" Margin="3,0,0,0">
                <DockPanel>
                    <!-- 减仓型委托单标题和操作按钮 -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="减仓型委托单" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="DarkOrange"/>
                        <Button Content="全选" Command="{Binding SelectAllOrdersCommand}" 
                               Width="45" Height="26" FontSize="11" Margin="0,0,5,0"/>
                        <Button Content="反选" Command="{Binding InvertOrderSelectionCommand}" 
                               Width="45" Height="26" FontSize="11" Margin="0,0,5,0"/>
                        <Button Content="撤销" Command="{Binding CancelSelectedOrdersCommand}" 
                               Background="Red" Foreground="White" FontWeight="Bold"
                               Width="65" Height="26" FontSize="11"
                               IsEnabled="{Binding HasSelectedOrders}"
                               ToolTip="撤销选中的减仓型委托单"/>
                    </StackPanel>
                    
                        <DataGrid ItemsSource="{Binding ReduceOnlyOrders}"
                             SelectedItem="{Binding SelectedOrder}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             GridLinesVisibility="Horizontal"
                             AlternationCount="2"
                                 FontSize="13"
                                 RowHeight="32"
                                 HeadersVisibility="Column"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"
                                 MinHeight="150"
                                 MaxHeight="400">
                        <DataGrid.Columns>
                            <!-- 选择框列 -->
                                <DataGridCheckBoxColumn Header="选择" Binding="{Binding IsSelected}" Width="55" MinWidth="50">
                                <DataGridCheckBoxColumn.ElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridCheckBoxColumn.ElementStyle>
                            </DataGridCheckBoxColumn>
                            
                                <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="95" MinWidth="90">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="类型" Binding="{Binding Type}" Width="110" MinWidth="105">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="数量" Binding="{Binding OrigQty, StringFormat=F4}" 
                                                   Width="140" MinWidth="135">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="触发价" Width="150" MinWidth="145">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="StopPrice" Converter="{StaticResource PriceFormatConverter}"/>
                                </DataGridTextColumn.Binding>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,5,0"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                            <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80" MinWidth="75">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                                <!-- 创建时间列 -->
                            <DataGridTextColumn Header="创建时间" Binding="{Binding Time, StringFormat=MM-dd HH:mm:ss}" 
                                                   Width="120" MinWidth="115">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="10"/>
                                            <Setter Property="FontFamily" Value="Consolas"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </materialDesign:Card>
        </Grid>

        <!-- 操作按钮区 -->
        <materialDesign:Card Grid.Row="2" Padding="6" Margin="0,5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- 第一组：持仓相关操作 -->
                <Button Content="一键清仓" Command="{Binding ClearAllPositionsAndOrdersCommand}" 
                       Background="DarkRed" Foreground="White" FontWeight="Bold"
                       Width="80" Height="28" FontSize="12"
                       ToolTip="清空所有持仓和委托单（市价平仓）"/>
                <Button Content="平仓" Command="{Binding ClosePositionCommand}"
                       Width="60" Height="28" FontSize="12"
                       ToolTip="平掉选中的持仓"/>
                <Button Content="增加保本止损" Command="{Binding AddBreakEvenStopLossCommand}"
                       Background="Orange" Foreground="White" FontWeight="Bold"
                       Width="95" Height="28" FontSize="12"
                       ToolTip="为选中持仓添加保本止损单（触发价=开仓价）"/>
                    <Button Content="保盈止损" Command="{Binding AddProfitProtectionStopLossCommand}"
                           Background="DarkOrange" Foreground="White" FontWeight="Bold"
                           Width="80" Height="28" FontSize="12"
                           ToolTip="为选中持仓添加保盈止损单（保护指定盈利）"/>
                
                <!-- 分隔符1 -->
                <TextBlock Text=" | " VerticalAlignment="Center" FontSize="14" FontWeight="Bold" 
                          Foreground="Gray" Margin="5,0"/>
                
                <!-- 第二组：委托单相关操作 -->
                <Button Content="清理委托单" Command="{Binding CancelAllOrdersCommand}"
                       Width="80" Height="28" FontSize="12"
                       ToolTip="取消所有未成交的委托订单"/>
                <Button Content="清除选定委托" Command="{Binding CancelSelectedOrdersCommand}"
                       Background="Red" Foreground="White" FontWeight="Bold"
                       Width="95" Height="28" FontSize="12"
                       IsEnabled="{Binding HasSelectedOrders}"
                       ToolTip="取消选中的委托订单"/>
                
                <!-- 分隔符2 -->
                <TextBlock Text=" | " VerticalAlignment="Center" FontSize="14" FontWeight="Bold" 
                          Foreground="Gray" Margin="5,0"/>
                
                <!-- 第三组：查询操作 -->
                <Button Content="查询订单历史" Command="{Binding CheckOrderHistoryCommand}"
                       Background="Blue" Foreground="White" FontWeight="Bold"
                       Width="100" Height="28" FontSize="12"
                       ToolTip="查询最近50条订单历史，寻找已执行或已取消的止损单"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- 下单区 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- 下单输入区 -->
            <materialDesign:Card Grid.Column="0" Padding="6" Margin="0,0,3,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="350">
                        <DockPanel MinHeight="300">
                            <TextBlock Text="下单区" FontWeight="Bold" FontSize="15" DockPanel.Dock="Top" Margin="0,0,0,6"/>
                    
                    <!-- 杠杆快捷设置 -->
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,6">
